<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineShop</title>

    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>
<body style="background-color: #e6e6e5">
    <nav>
        <div class="nav-wrapper" style="background-color: #2c235d">

            <img src="/lib/img/sport.png" style="height:45px;margin-top:10px;margin-right:20px;margin-left:200px" />
            <a class="brand-logo">Tech Sport</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a  asp-controller="Home" asp-action="Index">All Items</a></li>
                <li><a >Login</a></li>
                <li><a style="margin-right:130px">Registration</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <nav>
            <div class="nav-wrapper" style="background-color: #2c235d">
                <div class="col s12" style="margin-top:15px;margin-bottom:15px">
                    <a class="breadcrumb" style="padding-left:30px">First</a>
                    <a class="breadcrumb">Second</a>
                    <a class="breadcrumb">Thirds</a>
                </div>
            </div>
        </nav>
        <div class="row">
            <div class="col s3" style="padding:0px;padding-top:7px;width:197px">
                <ul class="collection with-header">
                    <li class="collection-header"><h6>Categories</h6></li>
                    <a  class="collection-item"><img style="height:15px;width:15px;margin-right:14px" src="~/lib/img/football-ball.png" />Bicycles</a>
                    <a asp-controller="User_Role" asp-action="Index" class="collection-item"><img style="height:15px;width:15px;margin-right:14px" src="~/lib/img/football-ball.png" /><span class="new badge orange">1</span>User and Roles</a>
                    <a asp-controller="Users" class="collection-item"><img style="height:15px;width:15px;margin-right:14px" src="~/lib/img/football-ball.png" />Users</a>
                    <a asp-controller="Roles" class="collection-item"><img style="height:15px;width:15px;margin-right:14px" src="~/lib/img/football-ball.png" />Roles</a>
                    <a asp-controller="Countries" class="collection-item"><img style="height:15px;width:15px;margin-right:14px" src="~/lib/img/football-ball.png" />Countries</a>
                    <a asp-controller="Brands" class="collection-item"><img style="height:15px;width:15px;margin-right:14px" src="~/lib/img/football-ball.png" />Brands</a>
                    <a asp-controller="Items" class="collection-item"><img style="height:15px;width:15px;margin-right:14px" src="~/lib/img/football-ball.png" />Items</a>
                    <a asp-controller="Categories"class="collection-item"><img style="height:15px;width:15px;margin-right:14px" src="~/lib/img/football-ball.png" />Categories</a>

                </ul>

            </div>
            <div class="col s9" style="padding-right:0px;width:908px">
                @RenderBody()
            </div>
        </div>
    </div>
    <footer class="page-footer" style="background-color: #1e1e1e">
        <div class="container">
            <div class="row">
                <div class="col l6  s3">
                    <h5 class="white-text " style="margin-right:140px">Tech Sport</h5>
                    <ul>
                        <li><a class="grey-text text-lighten-3  " >Tech Sport.Order items from us</a></li>
                    </ul>
                </div>
                <div class="col  s3">
                    <h5 class="white-text">Contacts</h5>
                    <ul>
                        <li><a class="grey-text text-lighten-3" ><strong>Order service</strong></a></li>
                        <li><a class="grey-text text-lighten-3" >+7 (775) 007 06 69</a></li>

                    </ul>
                </div>
                <div class="col s3">
                    <h5 class="white-text ">FAQ</h5>
                    <ul>
                        <li><a class="grey-text text-lighten-3  " >Feedback</a></li>
                        <li><a class="grey-text text-lighten-3 " >About Company</a></li>
                        <li><a class="grey-text text-lighten-3 " >Events</a></li>

                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                © 2021 Tech Sport

            </div>
        </div>
    </footer>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
